    "test:tape": "postcss-tape"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "dependencies": {
    "postcss": "^6.0"
  },
  "devDependencies": {
    "babel-core": "^6.26",
    "babel-eslint": "^8.1",
    "babel-preset-env": "^1.6",
    "echint": "^4.0",
    "eslint": "^4.14",
    "eslint-config-dev": "2.0",
    "postcss-scss": "^1.0.2",
    "postcss-tape": "2.2",
    "pre-commit": "^1.2",
    "rollup": "^0.53",
    "rollup-plugin-babel": "^3.0"
  },
  "eslintConfig": {
    "extends": "dev",
    "parser": "babel-eslint",
    "rules": {
      "max-params": [
        0
      ]
    }
  },
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "sass",
    "scss",
    "variables",
    "conditionals",
    "iterators",
    "fors",
    "eaches",
    "medias",
    "defaults"
